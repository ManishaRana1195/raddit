<%= div_for(comment) do %>
	<div class="comments-wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><%= comment.body %></p>
			<p> <small> Submitted <strong> <%= time_ago_in_words(comment.created_at) %> </strong> by <strong><%= comment.user.name %></strong></small></p>
		</div>
	<div class="btn-grp pull-right">
	<%if comment.user == current_user %>
	<%= link_to "Delete", comment, method: :delete, data: { confirm: 'Are you sure?'} %>
	<% end %>
	</div>
	</div>
<% end %>